        <activity
            android:name="com.mid.shouhuo.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.mid.shouhuo.WelActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mid.shouhuo.SettingActivity"
            android:label="@string/title_activity_setting" >
