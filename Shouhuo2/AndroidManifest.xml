        <activity
            android:name="com.mid.shouhuo.SettingMottoActivity"
            android:label="@string/title_activity_setting_motto" >
        </activity>
        <activity
            android:name="com.mid.shouhuo.SettingRemindActivity"
            android:label="@string/title_activity_setting_remain" >
        </activity>

        <receiver
            android:name="com.mid.shouhuo.alarm.AlarmReceiver"
            android:enabled="true"
            android:exported="true" >
        </receiver>

        <activity
            android:name="com.mid.shouhuo.alarm.AlarmActivity"
            android:label="@string/title_activity_alarm"
            android:theme="@style/MyDialog" >
        </activity>
        <activity
            android:name="com.mid.shouhuo.InicialActivity"
            android:label="@string/title_activity_inicial" >
