<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
        android:id="@+id/text_plan_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:text="类型："
        android:textColor="@color/text2" />

    <RadioGroup
        android:id="@+id/type_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/text_plan_type"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-6dp"
        android:layout_toRightOf="@id/text_plan_type"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/type_once"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_add_bg"
            android:button="@null"
            android:padding="5dp"
            android:text="单次"
            android:textColor="@color/text2"
            android:textSize="@dimen/text_min" />

        <RadioButton
            android:id="@+id/type_daily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_add_bg"
            android:button="@null"
            android:padding="5dp"
            android:text="日常"
            android:textColor="@color/text2"
            android:textSize="@dimen/text_min" />

    </RadioGroup>

    <TextView
        android:id="@+id/text_plan_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_plan_type"
        android:layout_marginTop="20dp"
        android:text="标题："
        android:textColor="@color/text2" />

    <EditText
        android:id="@+id/plan_add_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/text_plan_title"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/text_plan_title"
        android:background="@drawable/btn_add_unchecked"
        android:padding="5dp"
        android:singleLine="true"
        android:textSize="@dimen/text_min" />

    <TextView
        android:id="@+id/text_plan_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_plan_title"
        android:layout_marginTop="15dp"
        android:text="提醒(可选)："
        android:textColor="@color/text2" />

    <Button
        android:id="@+id/plan_add_settime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/text_plan_alarm"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/text_plan_alarm"
        android:background="@drawable/btn_add_bg"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="选择时间"
        android:textColor="@color/text2"
        android:textSize="@dimen/text_min" />

    <TextView
        android:id="@+id/text_plan_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_plan_alarm"
        android:layout_marginTop="10dp"
        android:text="备注：（可选）"
        android:textColor="@color/text2" />

    <EditText
        android:id="@+id/plan_add_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_plan_remark"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_add_unchecked"
        android:gravity="top|left"
        android:lines="4"
        android:padding="5dp"
        android:textSize="@dimen/text_min" />

</RelativeLayout>